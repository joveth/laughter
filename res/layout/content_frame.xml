<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:background="#ffe1e0de"
    android:paddingTop="0dp" >
      <RelativeLayout
        android:id="@+id/tie_menu_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/skin_dark_blk_menubtn_bg" >
        <TextView
            android:id="@+id/menu_title_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/content_title_str"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <com.jov.laughter.views.PullDownView
        android:id="@+id/content_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:clickable="false"
        android:layout_below="@+id/tie_menu_top_bar"
        android:padding="0dp" >
    </com.jov.laughter.views.PullDownView>
	 <LinearLayout
        android:id="@+id/ad_bar_con"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />
</RelativeLayout>